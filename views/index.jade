extends layout

block append scripts
	script

		$(document).ready(function() {
			$('.play').click(function(event) {
				$.ajax({
					url: '/json/decks/names',
					dataType: 'json',
					success: function(deckNames, status) {
						abootay.deckNames = deckNames;
						$('.game-container').html(abootay.render.game.chooseDeck({ deckNames: deckNames }));
					}
				})
			});
		});

block body_content
	h1 Abootay
	.game-container
		.options
			button.play Play